<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Pengguna</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link ke file CSS -->
</head>
<body>
    <h1>Daftar Pengguna</h1>
    <a href="/users/add">Tambah Pengguna</a>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nama</th>
                <th>Email</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/users/edit/<%= user.id %>">Edit</a>
                        <form action="/users/delete/<%= user.id %>" method="POST" style="display:inline;">
                            <button type="submit">Hapus</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
